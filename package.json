    "decimal.js-light": "^2.5.1",
    "lcov-parse": "^1.0.0"
  },
  "devDependencies": {
    "@types/lcov-parse": "^1.0.0",
    "@types/node": "^20.14.9",
    "@typescript-eslint/parser": "^7.13.1",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.56.0",
    "eslint-plugin-github": "^5.0.1",
    "eslint-plugin-jest": "^28.6.0",
    "jest": "^29.5.0",
    "js-yaml": "^4.1.0",
